<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Smart View - Oollert Tasks</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
    body {
      background: #f5f7fa;
    }

    .smart-wrapper {
      max-width: 1400px;
      margin: 0 auto;
      padding: 32px;
    }
    
    .page-header {
      background: white;
      padding: 32px;
      border-radius: 16px;
      margin-bottom: 32px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }
    
    .page-title {
      font-size: 32px;
      font-weight: 700;
      color: #172b4d;
      margin-bottom: 8px;
    }
    
    .page-subtitle {
      color: #5e6c84;
      font-size: 16px;
    }
    
    .view-tabs {
      display: flex;
      gap: 12px;
      margin-bottom: 32px;
      flex-wrap: wrap;
    }
    
    .view-tab {
      padding: 12px 24px;
      background: white;
      color: #5e6c84;
      border: 2px solid #dfe1e6;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-block;
      font-size: 15px;
    }
    
    .view-tab:hover,
    .view-tab.active {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-color: #667eea;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }
    
    .section {
      background: white;
      border-radius: 16px;
      padding: 32px;
      margin-bottom: 24px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }
    
    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 24px;
      padding-bottom: 16px;
      border-bottom: 2px solid #f4f5f7;
    }
    
    .section-title {
      font-size: 22px;
      font-weight: 700;
      color: #172b4d;
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .section-count {
      background: #667eea;
      color: white;
      padding: 6px 14px;
      border-radius: 12px;
      font-size: 14px;
      font-weight: 600;
    }
    
    .tasks-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 20px;
      margin-top: 24px;
    }
    
    .task-card {
      background: white;
      border: 2px solid #f4f5f7;
      padding: 20px;
      border-radius: 12px;
      transition: all 0.3s;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }
    
    .task-card::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background: #dfe1e6;
    }
    
    .task-card.priority-urgent::before {
      background: linear-gradient(180deg, #e63946, #ff6b6b);
    }
    
    .task-card.priority-high::before {
      background: linear-gradient(180deg, #ff6b6b, #ff8787);
    }
    
    .task-card.priority-medium::before {
      background: linear-gradient(180deg, #ffa500, #ffb733);
    }
    
    .task-card.priority-low::before {
      background: linear-gradient(180deg, #4caf50, #66bb6a);
    }
    
    .task-card:hover {
      border-color: #667eea;
      box-shadow: 0 8px 24px rgba(102, 126, 234, 0.15);
      transform: translateY(-4px);
    }
    
    .task-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 12px;
    }
    
    .task-title {
      font-size: 17px;
      font-weight: 600;
      color: #172b4d;
      flex: 1;
      line-height: 1.4;
    }
    
    .priority-badge {
      padding: 4px 10px;
      border-radius: 6px;
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      white-space: nowrap;
      margin-left: 12px;
    }
    
    .badge-urgent {
      background: #fee;
      color: #e63946;
      border: 1px solid #e63946;
    }
    
    .badge-high {
      background: #fff5f5;
      color: #ff6b6b;
      border: 1px solid #ff6b6b;
    }
    
    .badge-medium {
      background: #fff8e1;
      color: #f57c00;
      border: 1px solid #ffa500;
    }
    
    .badge-low {
      background: #e8f5e9;
      color: #2e7d32;
      border: 1px solid #4caf50;
    }
    
    .task-description {
      color: #5e6c84;
      font-size: 14px;
      line-height: 1.6;
      margin-bottom: 12px;
    }
    
    .task-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      align-items: center;
      margin-top: 12px;
      padding-top: 12px;
      border-top: 1px solid #f4f5f7;
    }
    
    .task-due {
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 13px;
      color: #5e6c84;
      font-weight: 500;
    }
    
    .task-due.overdue {
      color: #e63946;
      font-weight: 700;
    }
    
    .task-due.today {
      color: #667eea;
      font-weight: 700;
    }
    
    .task-labels {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
    }
    
    .label-tag {
      padding: 4px 10px;
      background: linear-gradient(135deg, #e3fcef, #d4f4e3);
      color: #006644;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 600;
    }
    
    .status-badge {
      padding: 4px 10px;
      border-radius: 6px;
      font-size: 12px;
      font-weight: 600;
      background: #f4f5f7;
      color: #5e6c84;
    }
    
    .task-actions {
      display: flex;
      gap: 8px;
      margin-top: 16px;
    }
    
    .action-btn {
      flex: 1;
      padding: 8px 12px;
      background: #f4f5f7;
      color: #5e6c84;
      border: none;
      border-radius: 8px;
      font-size: 13px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .action-btn:hover {
      background: #667eea;
      color: white;
      transform: scale(1.05);
    }
    
    .action-btn.delete {
      background: #fff5f5;
      color: #e63946;
    }
    
    .action-btn.delete:hover {
      background: #e63946;
      color: white;
    }
    
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #5e6c84;
      grid-column: 1 / -1;
    }
    
    .empty-icon {
      font-size: 64px;
      margin-bottom: 16px;
      opacity: 0.5;
    }
    
    .empty-text {
      font-size: 18px;
      font-weight: 600;
      color: #172b4d;
      margin-bottom: 8px;
    }
    
    .empty-subtext {
      color: #5e6c84;
    }
    
    .fab-button {
      position: fixed;
      bottom: 32px;
      right: 32px;
      width: 64px;
      height: 64px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 50%;
      font-size: 32px;
      cursor: pointer;
      box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
      transition: all 0.3s;
      z-index: 100;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 300;
    }
    
    .fab-button:hover {
      transform: scale(1.1) rotate(90deg);
      box-shadow: 0 12px 36px rgba(102, 126, 234, 0.6);
    }
    
    .fab-button:active {
      transform: scale(0.95);
    }
    
    .modal-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.6);
      z-index: 1000;
      align-items: center;
      justify-content: center;
      backdrop-filter: blur(8px);
      animation: fadeIn 0.2s ease;
    }
    
    .modal-overlay.active {
      display: flex;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    .modal-box {
      background: white;
      padding: 40px;
      border-radius: 20px;
      max-width: 580px;
      width: 90%;
      max-height: 90vh;
      overflow-y: auto;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
      animation: slideUp 0.3s ease;
    }
    
    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 28px;
    }
    
    .modal-title {
      font-size: 26px;
      font-weight: 700;
      color: #172b4d;
    }
    
    .close-btn {
      background: #f4f5f7;
      border: none;
      font-size: 28px;
      cursor: pointer;
      color: #5e6c84;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      transition: all 0.2s;
      font-weight: 300;
    }
    
    .close-btn:hover {
      background: #dfe1e6;
      color: #172b4d;
      transform: rotate(90deg);
    }
    
    .form-group {
      margin-bottom: 24px;
    }
    
    .form-label {
      display: block;
      margin-bottom: 8px;
      color: #172b4d;
      font-weight: 600;
      font-size: 14px;
    }
    
    .form-input,
    .form-select,
    .form-textarea {
      width: 100%;
      padding: 14px 16px;
      border: 2px solid #dfe1e6;
      border-radius: 10px;
      font-size: 15px;
      font-family: inherit;
      transition: all 0.2s;
      background: white;
    }
    
    .form-input:focus,
    .form-select:focus,
    .form-textarea:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
    }
    
    .form-textarea {
      resize: vertical;
      min-height: 100px;
    }
    
    .form-buttons {
      display: flex;
      gap: 12px;
      margin-top: 32px;
    }
    
    .btn-primary {
      flex: 1;
      padding: 14px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 10px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.2s;
      font-size: 16px;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }
    
    .btn-secondary {
      padding: 14px 24px;
      background: #f4f5f7;
      color: #5e6c84;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .btn-secondary:hover {
      background: #dfe1e6;
    }
    
    .section.overdue .section-title {
      color: #e63946;
    }
    
    .section.today .section-title {
      color: #667eea;
    }
    
    @media (max-width: 768px) {
      .smart-wrapper {
        padding: 16px;
      }
      
      .tasks-grid {
        grid-template-columns: 1fr;
      }
      
      .view-tabs {
        overflow-x: auto;
        flex-wrap: nowrap;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>Oollert Tasks</h1>
    <nav>
      <a href="/home">Home</a>
      <a href="/tasks">Board View</a>
      <a href="/tasks/smart" style="color: #667eea; font-weight: 700;">Smart View</a>
      <a href="/tasks/analytics">Analytics</a>
      <a href="/tasks/focus">Focus</a>
      <form method="POST" action="/logout" style="display:inline">
        <button type="submit">Logout</button>
      </form>
    </nav>
  </header>
  <svg style="position: absolute; width: 0; height: 0;">
  <defs>
    <linearGradient id="pomodoroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="pomodoroGradientActive" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4caf50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#66bb6a;stop-opacity:1" />
    </linearGradient>
  </defs>
</svg>

  <% if (error && error.length) { %>
    <div style="position: fixed; top: 80px; right: 20px; z-index: 1000;">
      <div class="flash error"><%= error[0] %></div>
    </div>
  <% } %>
  <% if (success && success.length) { %>
    <div style="position: fixed; top: 80px; right: 20px; z-index: 1000;">
      <div class="flash success"><%= success[0] %></div>
    </div>
  <% } %>

  <div class="smart-wrapper">
    <div class="page-header">
      <h1 class="page-title">üéØ Smart View</h1>
      <p class="page-subtitle">Intelligent task organization by dates and priorities</p>
    </div>

    <div class="view-tabs">
      <a href="/tasks" class="view-tab">üìã Board View</a>
      <a href="/tasks/smart" class="view-tab active">üéØ Smart View</a>
      <a href="/tasks/analytics" class="view-tab">üìä Analytics</a>
    </div>

    <!-- Overdue Section -->
    <% if (overdue.length > 0) { %>
      <div class="section overdue">
        <div class="section-header">
          <div class="section-title">
            ‚ö†Ô∏è Overdue
            <span class="section-count"><%= overdue.length %></span>
          </div>
        </div>
        <div class="tasks-grid">
          <% overdue.forEach(task => { %>
            <div class="task-card priority-<%= task.priority %>" data-id="<%= task._id %>">
              <div class="task-header">
                <h3 class="task-title"><%= task.title %></h3>
                <span class="priority-badge badge-<%= task.priority || 'medium' %>">
                  <%= task.priority || 'medium' %>
                </span>
              </div>
              
              <% if (task.description) { %>
                <p class="task-description"><%= task.description %></p>
              <% } %>
              
              <div class="task-meta">
                <div class="task-due overdue">
                  üìÖ Overdue: <%= new Date(task.dueDate).toLocaleDateString() %>
                </div>
                <span class="status-badge"><%= task.status %></span>
                
                <% if (task.labels && task.labels.length > 0) { %>
                  <div class="task-labels">
                    <% task.labels.forEach(label => { %>
                      <span class="label-tag"><%= label %></span>
                    <% }) %>
                  </div>
                <% } %>
              </div>
              
              <div class="task-actions">
  <button class="action-btn complete-btn" data-id="<%= task._id %>">
    ‚úì Complete
  </button>
  <button class="action-btn start-btn" data-id="<%= task._id %>">
    ‚ñ∂ Start
  </button>
  
  <!-- NEW: Start Timer button -->
  <button class="action-btn start-timer" onclick="startPomodoroForTask('<%= task._id %>', '<%= task.title.replace(/'/g, "\\'") %>')">
    üçÖ Timer
  </button>
  
  <button class="action-btn delete" data-id="<%= task._id %>">
    Delete
  </button>
</div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- Today Section -->
    <div class="section today">
      <div class="section-header">
        <div class="section-title">
          üìå Today
          <span class="section-count"><%= today.length %></span>
        </div>
      </div>
      <div class="tasks-grid">
        <% if (today.length === 0) { %>
          <div class="empty-state">
            <div class="empty-icon">üéØ</div>
            <div class="empty-text">No tasks due today</div>
            <div class="empty-subtext">You're all caught up!</div>
          </div>
        <% } else { %>
          <% today.forEach(task => { %>
            <div class="task-card priority-<%= task.priority %>" data-id="<%= task._id %>">
              <div class="task-header">
                <h3 class="task-title"><%= task.title %></h3>
                <span class="priority-badge badge-<%= task.priority || 'medium' %>">
                  <%= task.priority || 'medium' %>
                </span>
              </div>
              
              <% if (task.description) { %>
                <p class="task-description"><%= task.description %></p>
              <% } %>
              
              <div class="task-meta">
                <div class="task-due today">
                  üìÖ Today
                </div>
                <span class="status-badge"><%= task.status %></span>
                
                <% if (task.labels && task.labels.length > 0) { %>
                  <div class="task-labels">
                    <% task.labels.forEach(label => { %>
                      <span class="label-tag"><%= label %></span>
                    <% }) %>
                  </div>
                <% } %>
              </div>
              
              <div class="task-actions">
                <button class="action-btn complete-btn" data-id="<%= task._id %>">
                  ‚úì Complete
                </button>
                <button class="action-btn start-btn" data-id="<%= task._id %>">
                  ‚ñ∂ Start
                </button>
                <button class="action-btn delete" data-id="<%= task._id %>">
                  Delete
                </button>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- Upcoming Section -->
    <div class="section">
      <div class="section-header">
        <div class="section-title">
          üìÖ Upcoming (Next 7 Days)
          <span class="section-count"><%= upcoming.length %></span>
        </div>
      </div>
      <div class="tasks-grid">
        <% if (upcoming.length === 0) { %>
          <div class="empty-state">
            <div class="empty-icon">üì≠</div>
            <div class="empty-text">No upcoming tasks</div>
            <div class="empty-subtext">No tasks in the next week</div>
          </div>
        <% } else { %>
          <% upcoming.forEach(task => { %>
            <div class="task-card priority-<%= task.priority %>" data-id="<%= task._id %>">
              <div class="task-header">
                <h3 class="task-title"><%= task.title %></h3>
                <span class="priority-badge badge-<%= task.priority || 'medium' %>">
                  <%= task.priority || 'medium' %>
                </span>
              </div>
              
              <% if (task.description) { %>
                <p class="task-description"><%= task.description %></p>
              <% } %>
              
              <div class="task-meta">
                <div class="task-due">
                  üìÖ Due: <%= new Date(task.dueDate).toLocaleDateString() %>
                </div>
                <span class="status-badge"><%= task.status %></span>
                
                <% if (task.labels && task.labels.length > 0) { %>
                  <div class="task-labels">
                    <% task.labels.forEach(label => { %>
                      <span class="label-tag"><%= label %></span>
                    <% }) %>
                  </div>
                <% } %>
              </div>
              
              <div class="task-actions">
                <button class="action-btn complete-btn" data-id="<%= task._id %>">
                  ‚úì Complete
                </button>
                <button class="action-btn start-btn" data-id="<%= task._id %>">
                  ‚ñ∂ Start
                </button>
                <button class="action-btn delete" data-id="<%= task._id %>">
                  Delete
                </button>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- Later Section -->
    <% if (later.length > 0) { %>
      <div class="section">
        <div class="section-header">
          <div class="section-title">
            üìÜ Later (7+ Days)
            <span class="section-count"><%= later.length %></span>
          </div>
        </div>
        <div class="tasks-grid">
          <% later.forEach(task => { %>
            <div class="task-card priority-<%= task.priority %>" data-id="<%= task._id %>">
              <div class="task-header">
                <h3 class="task-title"><%= task.title %></h3>
                <span class="priority-badge badge-<%= task.priority || 'medium' %>">
                  <%= task.priority || 'medium' %>
                </span>
              </div>
              
              <% if (task.description) { %>
                <p class="task-description"><%= task.description %></p>
              <% } %>
              
              <div class="task-meta">
                <div class="task-due">
                  üìÖ Due: <%= new Date(task.dueDate).toLocaleDateString() %>
                </div>
                <span class="status-badge"><%= task.status %></span>
                
                <% if (task.labels && task.labels.length > 0) { %>
                  <div class="task-labels">
                    <% task.labels.forEach(label => { %>
                      <span class="label-tag"><%= label %></span>
                    <% }) %>
                  </div>
                <% } %>
              </div>
              
              <div class="task-actions">
                <button class="action-btn complete-btn" data-id="<%= task._id %>">
                  ‚úì Complete
                </button>
                <button class="action-btn start-btn" data-id="<%= task._id %>">
                  ‚ñ∂ Start
                </button>
                <button class="action-btn delete" data-id="<%= task._id %>">
                  Delete
                </button>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- No Due Date Section -->
    <% if (noDueDate.length > 0) { %>
      <div class="section">
        <div class="section-header">
          <div class="section-title">
            üìã No Due Date
            <span class="section-count"><%= noDueDate.length %></span>
          </div>
        </div>
        <div class="tasks-grid">
          <% noDueDate.forEach(task => { %>
            <div class="task-card priority-<%= task.priority %>" data-id="<%= task._id %>">
              <div class="task-header">
                <h3 class="task-title"><%= task.title %></h3>
                <span class="priority-badge badge-<%= task.priority || 'medium' %>">
                  <%= task.priority || 'medium' %>
                </span>
              </div>
              
              <% if (task.description) { %>
                <p class="task-description"><%= task.description %></p>
              <% } %>
              
              <div class="task-meta">
                <span class="status-badge"><%= task.status %></span>
                
                <% if (task.labels && task.labels.length > 0) { %>
                  <div class="task-labels">
                    <% task.labels.forEach(label => { %>
                      <span class="label-tag"><%= label %></span>
                    <% }) %>
                  </div>
                <% } %>
              </div>
              
              <div class="task-actions">
                <button class="action-btn complete-btn" data-id="<%= task._id %>">
                  ‚úì Complete
                </button>
                <button class="action-btn start-btn" data-id="<%= task._id %>">
                  ‚ñ∂ Start
                </button>
                <button class="action-btn delete" data-id="<%= task._id %>">
                  Delete
                </button>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Floating Action Button -->
  <button class="fab-button" id="openModal" title="Add New Task">+</button>

  <!-- Add Task Modal -->
  <div class="modal-overlay" id="taskModal">
    <div class="modal-box">
      <div class="modal-header">
        <h2 class="modal-title">Create New Task</h2>
        <button class="close-btn" id="closeModal">√ó</button>
      </div>
      
      <form method="POST" action="/tasks" id="taskForm">
        <div class="form-group">
          <label class="form-label">Task Title *</label>
          <input type="text" name="title" class="form-input" placeholder="What needs to be done?" required>
        </div>
        
        <div class="form-group">
          <label class="form-label">Description</label>
          <textarea name="description" class="form-textarea" placeholder="Add more details about this task..."></textarea>
        </div>
        
        <div class="form-group">
          <label class="form-label">Due Date</label>
          <input type="date" name="dueDate" class="form-input">
        </div>
        
        <div class="form-group">
          <label class="form-label">Priority</label>
          <select name="priority" class="form-select">
            <option value="low">Low Priority</option>
            <option value="medium" selected>Medium Priority</option>
            <option value="high">High Priority</option>
            <option value="urgent">Urgent</option>
          </select>
        </div>
        
        <div class="form-group">
          <label class="form-label">Labels (comma-separated)</label>
          <input type="text" name="labels" class="form-input" placeholder="e.g., work, personal, urgent">
        </div>
        
        <div class="form-buttons">
          <button type="submit" class="btn-primary">Create Task</button>
          <button type="button" class="btn-secondary" id="cancelModal">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Modal controls
    const modal = document.getElementById('taskModal');
    const openBtn = document.getElementById('openModal');
    const closeBtn = document.getElementById('closeModal');
    const cancelBtn = document.getElementById('cancelModal');

    openBtn.onclick = () => modal.classList.add('active');
    closeBtn.onclick = () => modal.classList.remove('active');
    cancelBtn.onclick = () => modal.classList.remove('active');
    modal.onclick = (e) => {
      if (e.target === modal) modal.classList.remove('active');
    };

    // Complete task
    document.querySelectorAll('.complete-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const id = btn.dataset.id;
        try {
          const res = await fetch(`/tasks/${id}/move`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status: 'done' })
          });
          if (res.ok) {
            const card = btn.closest('.task-card');
            card.style.transition = 'all 0.3s';
            card.style.opacity = '0';
            card.style.transform = 'scale(0.8)';
            setTimeout(() => location.reload(), 300);
          } else {
            alert('Failed to update task');
          }
        } catch (err) {
          console.error('Error:', err);
          alert('Network error. Please try again.');
        }
      });
    });

    // Start task
    document.querySelectorAll('.start-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const id = btn.dataset.id;
        try {
          const res = await fetch(`/tasks/${id}/move`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status: 'inprogress' })
          });
          if (res.ok) {
            const card = btn.closest('.task-card');
            card.style.transition = 'all 0.3s';
            card.style.opacity = '0';
            card.style.transform = 'scale(0.8)';
            setTimeout(() => location.reload(), 300);
          } else {
            alert('Failed to update task');
          }
        } catch (err) {
          console.error('Error:', err);
          alert('Network error. Please try again.');
        }
      });
    });

    // Delete task
    document.querySelectorAll('.action-btn.delete').forEach(btn => {
      btn.addEventListener('click', async () => {
        if (!confirm('Are you sure you want to delete this task?')) return;
        
        const id = btn.dataset.id;
        try {
          const res = await fetch(`/tasks/${id}`, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' }
          });
          
          if (res.ok) {
            const card = btn.closest('.task-card');
            card.style.transition = 'all 0.3s';
            card.style.opacity = '0';
            card.style.transform = 'scale(0.8) rotate(-5deg)';
            setTimeout(() => card.remove(), 300);
          } else {
            alert('Failed to delete task');
          }
        } catch (err) {
          console.error('Error:', err);
          alert('Network error. Please try again.');
        }
      });
    });

    // Auto-hide flash messages
    setTimeout(() => {
      document.querySelectorAll('.flash').forEach(flash => {
        flash.style.transition = 'opacity 0.5s';
        flash.style.opacity = '0';
        setTimeout(() => flash.remove(), 500);
      });
    }, 5000);
    // Function to start Pomodoro timer for a specific task
    function startPomodoroForTask(taskId, taskTitle) {
    if (window.pomodoroTimer) {
      window.pomodoroTimer.setTask(taskId, taskTitle);
    } else {
      console.error('Pomodoro timer not initialized');
    }
    }

  </script>
  <script src="/js/pomodoro.js"></script>
</body>
</html>